{
  "info": {
    "name": "sacom-auth-svc",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json",
    "description": "Auth service APIs (direct mode). Set base_url and run Login first."
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:4443" },
    { "key": "access_token", "value": "" },
    { "key": "user_id", "value": "" },
    { "key": "role_id", "value": "" },
    { "key": "permission_id", "value": "" },
    { "key": "session_id", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health"
      }
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "Login",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"superadmin@sa.com\",\n  \"password\": \"SuperAdmin@123\"\n}"
            },
            "url": "{{base_url}}/auth/login"
          }
        },
        {
          "name": "Refresh",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/refresh"
          }
        },
        {
          "name": "Logout",
          "request": {
            "method": "POST",
            "url": "{{base_url}}/auth/logout"
          }
        },
        {
          "name": "Me",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/me"
          }
        }
      ]
    },
    {
      "name": "Sessions",
      "item": [
        {
          "name": "List Sessions",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/auth/session"
          }
        },
        {
          "name": "Delete Session",
          "request": {
            "method": "DELETE",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"sessionId\": \"{{session_id}}\"\n}"
            },
            "url": "{{base_url}}/auth/session/deleteSession"
          }
        },
        {
          "name": "Delete All Sessions",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/auth/session/deleteAllSessions"
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "List Users",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/users"
          }
        },
        {
          "name": "Create User",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"manager@example.com\",\n  \"name\": \"Manager\",\n  \"password\": \"StrongPass@123\",\n  \"roles\": [\"{{role_id}}\"]\n}"
            },
            "url": "{{base_url}}/api/admin/users"
          }
        },
        {
          "name": "Get User By Id",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/users/{{user_id}}"
          }
        },
        {
          "name": "Update User",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Updated Manager\",\n  \"disabled\": false,\n  \"roles\": [\"{{role_id}}\"]\n}"
            },
            "url": "{{base_url}}/api/admin/users/{{user_id}}"
          }
        },
        {
          "name": "Delete User",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/users/{{user_id}}"
          }
        }
      ]
    },
    {
      "name": "Roles",
      "item": [
        {
          "name": "List Roles",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/roles"
          }
        },
        {
          "name": "Create Role",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"CATALOG_MANAGER\",\n  \"description\": \"Catalog management role\",\n  \"permissions\": [\"{{permission_id}}\"]\n}"
            },
            "url": "{{base_url}}/api/admin/roles"
          }
        },
        {
          "name": "Update Role",
          "request": {
            "method": "PUT",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"description\": \"Updated role description\"\n}"
            },
            "url": "{{base_url}}/api/admin/roles/{{role_id}}"
          }
        },
        {
          "name": "Delete Role",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/roles/{{role_id}}"
          }
        }
      ]
    },
    {
      "name": "Permissions",
      "item": [
        {
          "name": "List Permissions",
          "request": {
            "method": "GET",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/permissions"
          }
        },
        {
          "name": "Create Permission",
          "request": {
            "method": "POST",
            "header": [
              { "key": "Authorization", "value": "Bearer {{access_token}}" },
              { "key": "Content-Type", "value": "application/json" }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"code\": \"custom:read\",\n  \"description\": \"Custom read\",\n  \"children\": []\n}"
            },
            "url": "{{base_url}}/api/admin/permissions"
          }
        },
        {
          "name": "Delete Permission",
          "request": {
            "method": "DELETE",
            "header": [{ "key": "Authorization", "value": "Bearer {{access_token}}" }],
            "url": "{{base_url}}/api/admin/permissions/{{permission_id}}"
          }
        }
      ]
    }
  ]
}
